<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEBEB"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:background="@drawable/welcome_button"
        android:layout_margin="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Supplement Information">

        </TextView>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <ImageButton
                android:id="@+id/book_button"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:src="@drawable/book"
                android:background="@color/white">
            </ImageButton>
            <ImageButton
                android:id="@+id/home_button"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:src="@drawable/home"
                android:background="@color/white">
            </ImageButton>
            <ImageButton
                android:id="@+id/check_button"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:src="@drawable/check"
                android:background="@color/white">
            </ImageButton>
        </LinearLayout>

    </com.google.android.material.bottomnavigation.BottomNavigationView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="165dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/supp1"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:background="@drawable/welcome_button">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Creatine"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:textAlignment="center">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/supp2"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"

            android:background="@drawable/welcome_button">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vitamin D3"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:textAlignment="center">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/supp3"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:background="@drawable/welcome_button">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Melatonin"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:textAlignment="center">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/supp4"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"

            android:orientation="horizontal"
            android:background="@drawable/welcome_button">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vitamin B12"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:textAlignment="center">
            </TextView>

        </LinearLayout>
        <Button
            android:id="@+id/addSuppBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="right"
            android:layout_margin="25dp"
            android:textSize="60dp"
            android:backgroundTint="#69B4D3"
            android:text="+">

        </Button>

    </LinearLayout>



</RelativeLayout>